// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id
  hevyUsername String?       @unique
  isVerified   Boolean       @default(false)
  guilds       UsersGuilds[]
  hevyWorkouts HevyWorkout[]
}

model Guild {
  id               String          @id
  workoutChannelId String?
  users            UsersGuilds[]
  WorkoutShares    WorkoutShares[]
}

model UsersGuilds {
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  guild         Guild    @relation(fields: [guildId], references: [id])
  guildId       String
  shareWorkouts Boolean  @default(true)
  assignedAt    DateTime @default(now())

  @@id([userId, guildId])
}

model HevyWorkout {
  id            String             @id
  hevyShortId   String          @unique
  user          User            @relation(fields: [userId], references: [id])
  userId        String
  WorkoutShares WorkoutShares[]
}

model WorkoutShares {
  workout    HevyWorkout @relation(fields: [workoutId], references: [id])
  workoutId  String
  guild      Guild       @relation(fields: [guildId], references: [id])
  guildId    String
  channelId  String
  sharedAt   DateTime    @default(now())
  sharedType String?

  @@id([workoutId, guildId, channelId])
}
